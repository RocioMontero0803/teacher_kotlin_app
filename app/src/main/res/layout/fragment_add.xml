<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.add.Add">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity2">


        <!--Name text box-->
        <EditText
            android:id="@+id/nameAdd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="60dp"
            android:layout_alignParentTop="true"
            android:hint="Name"
            android:textColorHint="@color/black"
            android:paddingLeft="13dp"
            android:background="@drawable/text_box"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <!--Uid text box-->
        <EditText
            android:id="@+id/uidAdd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/nameAdd"
            android:layout_marginTop="10dp"
            android:hint="Uid"
            android:paddingLeft="13dp"
            android:textColorHint="@color/black"
            android:background="@drawable/text_box"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/changeStudent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/uidAdd"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="210dp"
            android:hint="Change to Student"
            android:textColorHint="@color/white"
            android:textSize="17sp"
            android:textStyle="bold"
            android:background="@drawable/text_box2"/>


        <Button
            android:id="@+id/changeTeacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/uidAdd"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="210dp"
            android:hint="Change to Teacher"
            android:textColorHint="@color/white"
            android:textStyle="bold"
            android:textSize="17sp"
            android:background="@drawable/text_box2"/>

        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/changeStudent"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="30sp"
            android:hint="Add"
            android:textStyle="bold"
            android:textColorHint="@color/white"
            android:textSize="20sp"
            android:background="@drawable/text_box2"/>

    </RelativeLayout>

</FrameLayout>